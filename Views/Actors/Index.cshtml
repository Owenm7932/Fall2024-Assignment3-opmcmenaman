@model IEnumerable<Fall2024_Assignment3_opmcmenaman.Models.Actor>

@{
    ViewData["Title"] = "Actors Index";
}

<div class="text-center">
    <h1>Actors</h1>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                IMDB Link
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    <a href="@item.IMDBLink" target="_blank">IMDB Link</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ActorId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ActorId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ActorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Create" class="btn btn-success">Add New Actor</a>
</div>
