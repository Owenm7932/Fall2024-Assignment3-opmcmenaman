@model Fall2024_Assignment3_opmcmenaman.Models.MovieDetailsViewModel

<h2>@Model.Movie.Title</h2>
<p><strong>Genre:</strong> @Model.Movie.Genre</p>
<p><strong>Year of Release:</strong> @Model.Movie.YearOfRelease</p>
<p><strong>Overall Sentiment:</strong> @Model.OverallSentiment</p>

<h3>AI Reviews</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Review</th>
            <th>Sentiment Score</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model.AIReviews)
        {
            <tr>
                <td>@review.Split('(')[0].Trim()</td>
                <td>@review.Split('(')[1].Replace("Sentiment Score:", "").Replace(")", "").Trim()</td>
            </tr>
        }
    </tbody>
</table>

<h3>Actors in this Movie</h3>
<ul>
    @foreach (var actor in Model.Actors)
    {
        <li>
            @actor.Name
            <form asp-action="RemoveActorFromMovie" method="post" style="display:inline;">
                <input type="hidden" name="movieId" value="@Model.Movie.MovieId" />
                <input type="hidden" name="actorId" value="@actor.ActorId" />
                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
            </form>
        </li>
    }
</ul>


<h3>Add Actor to Movie</h3>
<form asp-action="AddActorToMovie" method="post">
    <input type="hidden" name="movieId" value="@Model.Movie.MovieId" />
    <select name="actorId" class="form-control">
        @foreach (var actor in Model.AllActors)
        {
            <option value="@actor.ActorId">@actor.Name</option>
        }
    </select>
    <button type="submit" class="btn btn-primary">Add Actor</button>
</form>

<a href="/Movies">Back to List</a>
